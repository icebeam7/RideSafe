<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideSafe.Presentation.StartScreen">
	<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="btnUserInfo" Text="Show info" Clicked="btnUserInfo_Clicked" Order="Primary" Priority="0" Icon="info.png"/>
    <ToolbarItem x:Name="btnContacts" Text="Show contacts" Clicked="btnContacts_Clicked" Order="Primary" Priority="1" Icon="users.png"/>
  </ContentPage.ToolbarItems>
</ContentPage>