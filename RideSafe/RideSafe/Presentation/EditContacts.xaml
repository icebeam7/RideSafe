<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideSafe.Presentation.EditContacts">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="Contact Name: "/>
      <Entry x:Name="txtName" />
      <Label Text="Phone Number: "/>
      <Entry x:Name="txtPhoneNumber" />
      <Label Text="Description"/>
      <Editor x:Name="txtDescription"/>
    </StackLayout>
  </ContentPage.Content>
  
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked" Order="Primary" Priority="0" Icon="save.png"/>
    <ToolbarItem x:Name="btnDelete" Text="Delete" Clicked="btnDelete_Clicked" Order="Primary" Priority="1" Icon="delete.png" />
  </ContentPage.ToolbarItems>
</ContentPage>